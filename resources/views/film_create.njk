{% extends 'master' %}

{% block title %}Film felvitele{% endblock %}
{% block content %}
  <h1>Film felvitele</h1>
  {% if old('errors') %}
  <div class="alert alert-danger" role="alert">Nem sikerült létrehozni a filmet:
    <ul>
      {% for error in old('errors') %}
      <li>{{ error.message }}</li>
      {% endfor %}
    </ul>
  </div>
  {% endif %}
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <form class="form-horizontal" action="{{ 'do_film_create' | route }}" method="POST" enctype="multipart/form-data">
        {{ csrfField }}
        <div class="form-group">
          <label for="inputName" class="col-sm-4 control-label">Film neve</label>
          <div class="col-sm-8">
            <input type="text" class="form-control" id="inputName" name="cim" placeholder="Film neve" value="{{ old('cim') }}">
          </div>
        </div>
        <div class="form-group">
          <label for="inputName" class="col-sm-4 control-label">Műfaj</label>
          <div class="col-sm-8">
            <input type="text" class="form-control" id="inputName" name="mufaj" placeholder="Műfaj" value="{{ old('mufaj') }}">
          </div>
        </div>
        <div class="form-group">
          <label for="inputName" class="col-sm-4 control-label">Hossz</label>
          <div class="col-sm-8">
            <input type="text" class="form-control" id="inputName" name="hossz" placeholder="Hossz" value="{{ old('hossz') }}">
          </div>
        </div>
        <div class="form-group">
          <label for="inputName" class="col-sm-4 control-label">Korhatár</label>
          <div class="col-sm-8">
            <input type="text" class="form-control" id="inputName" name="korhatar" placeholder="Korhatár" value="{{ old('korhatar') }}">
          </div>
        </div>
        <div class="form-group">
          <label for="inputName" class="col-sm-4 control-label">Rendező</label>
          <div class="col-sm-8">
            <input type="text" class="form-control" id="inputName" name="rendezo" placeholder="Rendező" value="{{ old('rendezo') }}">
          </div>
        </div>
        <div class="form-group">
          <label for="inputDescription" class="col-sm-4 control-label">Leírás</label>
          <div class="col-sm-8">
            <textarea id="inputDescription" class="form-control" name="leiras">{{ old('leiras') }}</textarea>
          </div>
        </div>
        <div class="form-group">
          <label for="inputImage" class="col-sm-4 control-label">Film képe</label>
          <div class="col-sm-8">
            <input type="file" id="inputImage" name="kep">
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-4 col-sm-8">
            <button type="submit" class="btn btn-success">Film beküldése</button>
          </div>
        </div>
      </form>
    </div>
  </div>
{% endblock %}
