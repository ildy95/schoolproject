{% extends 'master' %}

{% block title %}Előadások böngészése{% endblock %}
{% block content %}
  <table class="table table-striped table-hover " id="tblMain">
        <thead>
            <tr>
            <th>Film</th>
            <th>Időpont</th>
            <th>Terem</th>
            </tr>
        </thead>
        <tbody>
            {% for ea in eloadasok %}
            <tr class="active">
                {% for f in filmek %}
                  {% if f.id == ea.film_id %}
                    <td> {{ f.cim }} </td>
                    <td> {{ea.ido}} </td>
                    <td> {{ea.terem}} </td>
                    <td><a href="{{ 'film_foglalas' | route({fid: f.id, eid: ea.id}) }}">
                            Foglal
                        </a>
                    </td>
                  {% endif %}
                {% endfor %}
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
