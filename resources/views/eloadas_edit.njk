{% extends 'master' %}

{% block title %}Előadás hirdetése{% endblock %}
{% block content %}
  <h1>Előadás hirdetése</h1>
  {% if old('errors') %}
  <div class="alert alert-danger" role="alert">Nem sikerült létrehozni az előadást:
    <ul>
      {% for error in old('errors') %}
      <li>{{ error.message }}</li>
      {% endfor %}
    </ul>
  </div>
  {% endif %}
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <form class="form-horizontal" action="{{ 'do_eloadas_edit' | route({id: ea.id}) }}" method="POST" enctype="multipart/form-data">
        {{ csrfField }}
        <div class="input-append date" id="dp3" data-date="12-02-2012" data-date-format="dd-mm-yyyy">
            <input class="span2" size="16" type="text" value="12-02-2012" /> 
            <span class="add-on"><i class="icon-th"></i></span>
            <script type="text/javascript">
            $(function () {
                $('#datetimepicker1').datetimepicker();
            });
        </script>

        </div>
        <div class="form-group">
          <div class="col-sm-offset-4 col-sm-8">
            <button type="submit" class="btn btn-success">Mentés</button>
          </div>
        </div>
      </form>
    </div>
  </div>
{% endblock %}
